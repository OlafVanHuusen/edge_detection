#!/bin/sh
# Pre-commit hook: RuboCop autocorrect
# Place this file in .githooks/pre-commit and set up with:
#   git config core.hooksPath .githooks
#
# This script will run RuboCop with autocorrect before each commit.
# If any unfixable offenses remain, the commit will be blocked.

# Run RuboCop autocorrect
bundle exec rubocop --autocorrect
status=$?
if [ $status -ne 0 ]; then
  echo "RuboCop found issues that could not be auto-corrected. Please fix them before committing."
  exit $status
fi

